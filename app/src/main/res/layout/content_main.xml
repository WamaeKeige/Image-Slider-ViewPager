<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.awake.viewpager.MainActivity"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Available Luxury Cars"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtcost"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Ksh 3,000,000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="0dp" />

<android.support.v4.view.ViewPager
    android:layout_width="368dp"
    android:layout_height="200dp"
    android:id="@+id/viewpager"
    tools:layout_editor_absoluteY="32dp"
    tools:layout_editor_absoluteX="8dp"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:text="Vehicle Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Book Vehicle"
        android:background="@color/colorgreen"
        android:textColor="@color/colorwhite"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="403dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
